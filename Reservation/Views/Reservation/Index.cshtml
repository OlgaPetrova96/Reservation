@model System.Collections.Generic.IEnumerable<ReservationView>

@{
    ViewData["Title"] = "Все бронирования";
}

<h3>Все бронирования: </h3>
<table class="table table-bordered">
    <thead class="header" style="background: #fb0050; color: white; font-weight: bold;">
        <th>@Html.DisplayNameFor(model => model.MeetingRoom.Name)</th>
        <th>@Html.DisplayNameFor(model => model.MeetingRoom.Capacity)</th>
        <th>@Html.DisplayNameFor(model => model.Reservation.BeginTime)</th>
        <th>@Html.DisplayNameFor(model => model.Reservation.EndTime)</th>
        <th>@Html.DisplayNameFor(model => model.Reservation.Priority)</th>
        <th>@Html.DisplayNameFor(model => model.Reservation.Booker)</th>
        <th>@Html.DisplayNameFor(model => model.Reservation.Description)</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MeetingRoom.Name</td>
                <td>@item.MeetingRoom.Capacity</td>
                <td>@item.Reservation.BeginTime.ToString("dd.MM.yyyy hh:mm")</td>
                <td>@item.Reservation.EndTime.ToString("dd.MM.yyyy hh:mm")</td>
                <td>@item.Priority</td>
                <td>@item.Reservation.Booker</td>
                <td>@item.Reservation.Description</td>
                <td>
                    <a class="btn btn-default hov" asp-action="Edit" asp-route-id="@item.Reservation.Id">Изменить</a>
                    <a class="btn btn-default hov" asp-action="Delete" asp-route-id="@item.Reservation.Id">Удалить</a>
                </td>
            </tr>

        }
    </tbody>
</table>