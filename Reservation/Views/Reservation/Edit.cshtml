@using Reservation.Models
@model Reservation

@{
    ViewData["Title"] = "Изменить";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoomId" class="control-label"></label>
                @Html.DropDownList("RoomId", ViewBag.Room as SelectList)
            </div>
            
            <div>
                <label class="control-label">Дата</label><br />
                <input asp-for="BeginTime" class="form-control" type="date" name="Date" required="true"/>
            </div>
            
            <div>
                <label class="control-label">Начало встречи</label><br />
                <input asp-for="BeginTime" class="form-control" type="time" name="BeginTime" required="true"/>
            </div>
            
            <div>
                <label class="control-label">Окончание встречи</label><br />
                <input asp-for="EndTime" class="form-control" type="time" name="EndTime" required="true"/>
            </div>
            
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                @Html.DropDownList("Priority", ViewBag.Priority as SelectList)
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-default hov" />
            </div>
        </form>
    </div>
</div>