@using Reservation.Models
@model Reservation

@{
    ViewData["Title"] = "Создать";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="margin-bottom: 20px;">
                <label asp-for="RoomId" class="control-label"></label>
                @Html.DropDownList("RoomId", ViewBag.Room as SelectList)
            </div>
            
            <div style="margin-bottom: 20px;">
                <label class="control-label">Дата</label><br />
                <input class="form-control" type="date" required="true" name="Date" />
            </div>
            
            <div style="margin-bottom: 20px;">
                <label class="control-label">Начало встречи</label><br />
                <input class="form-control" type="time" required="true" name="BeginTime" />
            </div>
            
            <div style="margin-bottom: 20px;">
                <label class="control-label">Окончание встречи</label><br />
                <input class="form-control" type="time" required="true" name="EndTime" />
            </div>
            
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                @Html.DropDownList("Priority", ViewBag.Priority as SelectList)
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Забронировать" class="btn btn-default hov" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>