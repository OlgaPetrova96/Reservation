@using System.Collections.Generic
@using Reservation.Models
@model System.Collections.Generic.IEnumerable<Reservation>

@{
    ViewData["Title"] = "My reservations";
}

<h3>Мои бронирования: </h3>
<table class="table table-bordered">
    <thead class="header" style="background: #DCDCDC; font-weight: bold;">
        <td>Номер</td>
        <td>Комната</td>
        <td>Начало встречи</td>
        <td>Окончание встречи</td>
        <td>Описание</td>
        <td>Приоритет</td>
        <td></td>
    </thead>
    <tbody>
    @foreach (Reservation reserv in Model)
    {
        <tr>
            <td>@reserv.Id</td>
            <td>@reserv.RoomId</td>
            <td>@reserv.BeginTime</td>
            <td>@reserv.EndTime</td>
            <td>@reserv.Description</td>
            <td>@reserv.Priority</td>
            <td>
                <a asp-action="Edit" asp-route-id="@reserv.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@reserv.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>