@using Microsoft.AspNetCore.Mvc.Rendering
@model LoginModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 style="margin-bottom: 5%;">Вход в систему</h2>
 
<form asp-action="Login" asp-controller="Login" class="form-horizontal" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Login" class="control-label col-sm-2">Введите Email</label>
            <div class="col-sm-4">
                <input type="email" asp-for="Login" class="form-control"/>
            </div>
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label col-sm-2">Введите пароль</label>
            <div class="col-sm-4">
                <input asp-for="Password" class="form-control"/>
            </div>
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-4">
                <input type="submit" class="btn btn-default" value="Войти"/>
                <p style="margin-top: 4%;">@Html.ActionLink("Зарегистрироваться", "Registration", "Login", new { area = "" }, new { @class = "btn btn-default" })</p>
            </div>
        </div>
    </div>
</form>